pipeline {
 
  agent any
  stages {
    stage ("clone the repository") {
      steps {
        git "https://github.com/anthonymikha/addressbook.git"
      }
    }
    stage ("compile the project") {
      steps {
        sh "mvn compile"
      }
    }
    stage ("Tests") {
      steps {
        sh "mvn test"
      }
     stage ("package") {
      steps {
        sh "mvn package"
      }
    }
  }
}
